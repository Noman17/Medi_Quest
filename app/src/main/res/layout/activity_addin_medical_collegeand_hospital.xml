<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddinMedicalCollegeandHospital">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/nav_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/back_icon_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="-40dp"
                android:padding="15dp"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Hospital Details"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:drawablePadding="10dp"
            android:text="Ad-din Medical College and Hospital, Dhaka"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_local_hospital" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_local_hospital"
            android:drawablePadding="10dp"
            android:text="Generel Hospital"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_city"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:text="2, Boro Moghbazar, Dhaka - 1217"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:text="Moghbazar, Dhaka"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_web"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:text="http://www.ad-din.org/"/>

        <TextView
            android:id="@+id/call_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_call"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:text="09612345666"/>

    </LinearLayout>

</LinearLayout>